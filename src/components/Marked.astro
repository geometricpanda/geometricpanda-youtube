---
import {parse} from "marked";
const { content, class:className, 'data-id': dataId } = Astro.props;
---

<div class:list={["marked", className]} data-id={dataId}>
    <Fragment set:html={parse(content)} />
</div>


<style is:global>
    .marked p,
    .marked li {
        font-family: var(--type-font-family);
        font-size: var(--type-font-size-T300);
        line-height: var(--type-line-height-T300);
        font-weight: var(--type-font-weight-T300);
        color: var(--color-0);
        margin-block-start: 0;
    }

    .marked a {
        color: var(--color-interactive-highlight);
        word-break: break-all;
    }

    .marked a:focus {
        outline: var(--focus-outline);
        outline-offset: 2px;
        box-shadow: var(--focus);
    }

    .marked ul {
        padding-inline-start: 14px;
    }

    .marked > *:not(:last-child) {
        margin-bottom: 1em;
    }
</style>
