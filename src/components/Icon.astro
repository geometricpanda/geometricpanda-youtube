---
import { Icon } from 'astro-icon';

export interface Props {
	name: string;
	size: string;
	class: string;
}

const { name, size, class: className } = Astro.props;

---

<Icon pack="mdi"
      name={name}
      class:list={{
        [className]: !!className,
        icon: true,
        'icon--sm': size === 'sm',
        'icon--lg': size === 'lg',
        'icon--xl': size === 'xl',
        'icon--2xl': size === '2xl',
  }} />

<style>

.icon {
    --icon-size: 44px;
    --icon-padding: 10px;
    padding: var(--icon-padding);
    width: var(--icon-size);
    height: var(--icon-size);
}

.icon--sm {
    --icon-size: 24px;
    --icon-padding: 2px;
}

.icon--lg {
    --icon-size: 66px;
}

.icon--xl {
    --icon-size: 88px;
}

.icon--2xl {
    --icon-size: 110px;
}

</style>
